
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">

        <div class="form-group">
            <span class = "formlabelFontRight col-md-3">Access Role</span>
            <div class="col-md-9">
                <input id="TxtAccessRole_Add" type="text" class="form-control" placeholder="Access Role Name" maxlength="12" />
            </div>
        </div>

        <div class="form-group">
            <span class="formlabelFontRight col-md-3">Created By</span>
            <div class="col-md-9 normalFontLeft">
                <span>@Session["username"].ToString()</span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-3 col-md-9">
                <input id="BtnCancel" type="button" value="Cancel" class="btn btn-default" />
                <input id="BtnCreateAccessRole" type="button" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>
}