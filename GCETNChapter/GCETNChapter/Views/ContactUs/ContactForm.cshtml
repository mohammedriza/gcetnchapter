@model GCETNChapter.Models.ViewModels.ContactUsVO
<script src="~/JQueryScripts/ContactUsPage.js"></script>

@{
    ViewBag.Title = "ContactForm";
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <div id="divContactUsPage" class="partialBodySection hideDiv">
        <span class="headerText">Contact Us</span>
        <br /><br />

        <div class="row form-group">
            <div class="col-md-2 formlabelFontRight">
                @Html.LabelFor(model => model.Name)
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "textboxerror" })
            </div>
        </div>

        <div class="row form-group">
            <div class="col-md-2 formlabelFontRight">
                @Html.LabelFor(model => model.Email)
            </div>
            <div class="col-md-10 ">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "textboxerror" })
            </div>
        </div>

        <div class="row form-group">
            <div class="col-md-2 formlabelFontRight">
                @Html.LabelFor(model => model.Subject)
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Subject, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "textboxerror" })
            </div>
        </div>

        <div class="row form-group">
            <div class="col-md-2 formlabelFontRight">
                @Html.LabelFor(model => model.Messaage)
            </div>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Messaage, 5, 100, new { htmlAttributes = new { @class = "longtextbox" } }) <br />
                @Html.ValidationMessageFor(model => model.Messaage, "", new { @class = "textboxerror" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Submit Form" class="btn btn-primary" />
            </div>
        </div>

    </div>
}
