@model List<GCETNChapter.Models.ViewModels.DonationDetailsVO>

<span class="headerText">Manage Donations</span>
<br /><br />

<div>
    <a href="#" id="LnkAddNewDonation"><span class="glyphicon glyphicon-plus"></span> Add Donations</a>
</div>
<br />

<div class="table-responsive">
    <table id="TblViewDonations" class="table table-hover">
        <thead>
            <tr class="tableHeaderFont">
                <th></th>
                <th class="hidden">ID</th>
                <th>Col. Reg. No.</th>
                <th>Member Name</th>
                <th><span class="dateFormatText">(MM/DD/YYYY)</span>Payment Date</th>
                <th class="text-right">Amount</th>
                <th>Payment Reason</th>
                <th><span class="dateFormatText">(MM/DD/YYYY)</span>Pmnt Start date </th>
                <th><span class="dateFormatText">(MM/DD/YYYY)</span>Pmnt End date </th>
                <th>Created By</th>
                <th><span class="dateFormatText">(MM/DD/YYYY)</span>Created Date </th>
                <th>Modified By</th>
                <th><span class="dateFormatText">(MM/DD/YYYY)</span> Modified Date</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <tr class="tableBodyFont">
                        <td>
                            <a href="#" class="editIcon" title="Edit Donation" onclick="GetDonatoinDetailsByDonationID(@item.DonationID)">
                                <span class="glyphicon glyphicon-pencil"></span>
                            </a>
                            <a href="#" class="editIcon" title="Delete Donation" onclick="DeleteDonations(@item.DonationID)">
                                <span class="glyphicon glyphicon-trash"></span>
                            </a>
                        </td>
                        <td class="hidden">@item.DonationID</td>
                        <td>@item.CollegeRegistrationNo</td>
                        <td>@item.MemberName</td>
                        <td>@item.PaymentDate.Value.ToShortDateString()</td>
                        <td class="text-right">@Convert.ToDecimal(item.Amount).ToString("#,##0.00")</td>
                        <td>@item.PaymentReason</td>
                        <td>@item.PaymentStartDate.Value.ToShortDateString()</td>
                        <td>@item.PaymentEndDate.Value.ToShortDateString()</td>
                        <td>@item.CreatedBy</td>
                        <td>@item.CreatedDate.Value.ToShortDateString()</td>
                        <td>@item.ModifiedBy</td>
                        <td>@item.ModifiedDate</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>