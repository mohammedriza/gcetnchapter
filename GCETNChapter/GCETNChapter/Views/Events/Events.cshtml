<script src="~/JQueryScripts/Events/EventsPage.js"></script>
<script src="~/JQueryScripts/Events/ManageEvents.js"></script>
<script src="~/JQueryScripts/Events/ManageEventPaymentCollection.js"></script>
<script src="~/JQueryScripts/Events/ManageEventGallery.js"></script>
<script src="~/JQueryScripts/Events/ManageEventExpenseDetails.js"></script>

@{
    ViewBag.Title = "Events";
}

<div id="divEventsPage" class="partialBodySection hideDiv">
    <div class="row">
        <div class="col-md-2 text-center">
            <a href="#" id="LnkManageEvents_E">
                <p class="well well-sm">
                    Manage Events
                </p>
            </a>
        </div>

        <div class="col-md-2 text-center">
            <a href="#" id="LnkManageEventPaymentCollection_E">
                <p class="well well-sm">
                    Manage Event Payment Collections
                </p>
            </a>
        </div>

        <div class="col-md-2 text-center">
            <a href="#" id="LnkManageEventExpenseDetails_E">
                <p class="well well-sm">
                    Manage Event Expense Details
                </p>
            </a>
        </div>

        <div class="col-md-2 text-center">
            <a href="#" id="LnkManageEventGallery_E">
                <p class="well well-sm">
                    Manage Event Gallery
                </p>
            </a>
        </div>
    </div>

    <hr />


    <div id="divManageEvents">
        <div id="divViewEvents" class="hideDiv">
            @Html.Partial("Events/_ViewEvents")
        </div>
        <div id="divAddEvent" class="hideDiv">
            @Html.Partial("Events/_AddEvents")
        </div>
    </div>

    <div id="divManageEventPaymentCollection">
        <div id="divViewEventPaymentCollection" class="hideDiv">
            @Html.Partial("Events/_ViewEventPaymentCollection")
        </div>
        <div id="divAddEventPaymentCollection" class="hideDiv">
            @Html.Partial("Events/_AddEventPaymentCollection")
        </div>
    </div>

    <div id="divManageEventExpenseDetails">
        <div id="divViewEventExpenseDetails" class="hideDiv">
            @Html.Partial("Events/_ViewEventExpenseDetails")
        </div>
        <div id="divAddEventExpenseDetails" class="hideDiv">
            @Html.Partial("Events/_AddEventExpenseDetails")
        </div>
    </div>

    <div id="divManageEventGallery">
        <div id="divViewEventGallery" class="hideDiv">
            @*@Html.Partial("Events/_ViewEventGallery")*@
        </div>
        <div id="divAddEventGallery" class="hideDiv">
            @*@Html.Partial("Events/_AddEventGallery")*@
        </div>
    </div>
</div>

