<script src="~/JQueryScripts/PublicPages/HomePage.js"></script>

@{
    ViewBag.Title = "Home";
}

<div id="divHomePage" class="row hideDiv" style="background: #fff; height: 100%; width: 100%; display: block;">
    <div></div>
    <div style="padding-left: 100px; padding-right: 100px; width: 100%;">
        <!-- Bootstrap CSS -->
        <div class="container-fluid">
            <!-- MARQUEE TEXT ON THE TOP -->
            <div style="height: 30px;"></div>

            <div class="text-center">
                <span class="headerText">GCE TN CHAPTER TRUST</span>
                <br /><br />
                <span>
                    GCE TN Chapter Trust was established in Chennai, Tamil Nadu, India, on 24th July 2015 by a group of 5 old students of
                    Ghousia College of Engineering, Ramanagaram, Karnataka, India, to support the economically underprivileged old students
                    of Ghousia College of Engineering and other people, who live in / hail from Tamil Nadu, The Trust was foun... 
                    <a href="~/Home/AboutUs/">Read More...</a>
                </span>
            </div>
            <br /><br />

            <div class="row">
                <!-- IMAGE CAROUSEL CONTAINER -->
                <div class="col-md-9">
                    <div id="my-pics" class="carousel slide" data-ride="carousel" style="width:100%; margin:auto;">

                        <!-- Indicators -->
                        <ol class="carousel-indicators">
                            <li data-target="#my-pics" data-slide-to="0" class="active"></li>
                            <li data-target="#my-pics" data-slide-to="1"></li>
                            <li data-target="#my-pics" data-slide-to="2"></li>
                        </ol>

                        <!-- Content -->
                        <div class="carousel-inner" role="listbox">

                            <!-- Slide 1 -->
                            <div class="item active">
                                <img src="~/Images/Scrolling/Image_1.jpg" class="scrollingImgSize" />
                                <div class="text-center">
                                    <span class="headerText"> WELCOME TO </span><br />
                                    <span class="headerTextGreen"> GCE TN CHAPTER TRUST </span>
                                </div>
                            </div>

                            <!-- Slide 2 -->
                            <div class="item">
                                <img src="~/Images/Scrolling/Image_4.jpg" class="scrollingImgSize" />
                                <div class="text-center">
                                    <span class="headerText"> OUR VISION </span><br />
                                    <p>
                                        Our vision is to create self-sufficient society which can support the needy old students of Ghousia College of
                                        Engineering Ramanagaram who live in or hail from Tamil Nadu....
                                        <a href="~/Home/AboutUs/">Read More...</a>
                                    </p>
                                </div>
                            </div>

                            <!-- Slide 3 -->
                            <div class="item">
                                <img src="~/Images/Scrolling/Image_3.jpg" class="scrollingImgSize" />
                                <div class="text-center">
                                    <span class="headerText"> OUR MISSION </span><br />
                                    <p>
                                        Our mission is to support the needy financially, in Job or career search , family counselling, etc.,
                                        The mission can be achieved by creating or developing entrepreneurs amongst us, by providing technical support
                                        or provide expert advice to those who require to run or develop their own business, with the help of our
                                        GCE friends who have expertise in that field... <a href="~/Home/AboutUs/">Read More...</a>
                                    </p>
                                </div>
                            </div>

                        </div>

                        <!-- Previous/Next controls -->
                        <a class="left carousel-control" href="#my-pics" role="button" data-slide="prev">
                            <span class="icon-prev" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="right carousel-control" href="#my-pics" role="button" data-slide="next">
                            <span class="icon-next" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>

                    </div>
                </div>
                <div id="divShowAdvertisements">
                    @Html.Partial("Index/_Advertisement")
                </div>
            </div>

            <br /><br /><br />

        </div>
    </div>
</div>