@model GCETNChapter.Models.ViewModels.MemberProfileVO

<div class="panel panel-default">
    <div class="panel-heading formlabelFontLeft">Contact Information</div>
    <div class="panel-body">

        <div class="form-horizontal">
            <div class="form-group">
                <div>
                    @Html.LabelFor(model => model.PrimaryContactNo, htmlAttributes: new { @class = "formlabelFontRight col-md-2" })
                    <div class="col-md-4">
                        @Html.EditorFor(model => model.PrimaryContactNo, new { htmlAttributes = new { @class = "form-control", id = "TxtPrimaryContactNo", maxlength = "12" } })
                        @Html.ValidationMessageFor(model => model.PrimaryContactNo, "", new { @class = "textboxerror" })
                    </div>
                </div>
                <div>
                    @Html.LabelFor(model => model.ContactNoIndia, htmlAttributes: new { @class = "formlabelFontRight col-md-2" })
                    <div class="col-md-4">
                        @Html.EditorFor(model => model.ContactNoIndia, new { htmlAttributes = new { @class = "form-control", id = "TxtContactNoIndia", maxlength = "12" } })
                        @Html.ValidationMessageFor(model => model.ContactNoIndia, "", new { @class = "textboxerror" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div>
                    @Html.LabelFor(model => model.WhatsappNumber, htmlAttributes: new { @class = "formlabelFontRight col-md-2" })
                    <div class="col-md-4">
                        @Html.EditorFor(model => model.WhatsappNumber, new { htmlAttributes = new { @class = "form-control", id = "TxtWhatsappNumber", maxlength = "12" } })
                        @Html.ValidationMessageFor(model => model.WhatsappNumber, "", new { @class = "textboxerror" })
                    </div>
                </div>
                <div>
                    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "formlabelFontRight col-md-2" })
                    <div class="col-md-4">
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", id = "TxtEmail", maxlength = "50" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "textboxerror" })
                    </div>
                </div>
            </div>
        </div>


        <br />
        <div class="col-md-12 text-center">
            <input type="button" value="Save" class="btn btn-primary" onclick="UpdateProfileContactInformation();" />
        </div>
    </div>
</div>