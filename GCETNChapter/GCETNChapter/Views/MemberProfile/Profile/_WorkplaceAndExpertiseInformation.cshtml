@model GCETNChapter.Models.ViewModels.MemberProfileVO

<div class="panel panel-default">
    <div class="panel-heading formlabelFontLeft">Workplace And Expertise Information</div>
    <div class="panel-body">

        <div class="form-horizontal">

            <div class="form-group">
                <div>
                    @Html.LabelFor(model => model.Company, htmlAttributes: new { @class = "formlabelFontRight col-md-2" })
                    <div class="col-md-4">
                        @Html.EditorFor(model => model.Company, new { htmlAttributes = new { @class = "form-control", id = "TxtCompany", maxlength = "50" } })
                        @Html.ValidationMessageFor(model => model.Company, "", new { @class = "textboxerror" })
                    </div>
                </div>
                <div>
                    @Html.LabelFor(model => model.Occupation, htmlAttributes: new { @class = "formlabelFontRight col-md-2" })
                    <div class="col-md-4">
                        @Html.EditorFor(model => model.Occupation, new { htmlAttributes = new { @class = "form-control", id = "TxtOccupation", maxlength = "50" } })
                        @Html.ValidationMessageFor(model => model.Occupation, "", new { @class = "textboxerror" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div>
                    @Html.LabelFor(model => model.Expertise1, htmlAttributes: new { @class = "formlabelFontRight col-md-2" })
                    <div class="col-md-4">
                        @Html.EditorFor(model => model.Expertise1, new { htmlAttributes = new { @class = "form-control", placeholder = "Expertise area 1", id = "TxtExpertise1", maxlength = "50" } })
                        @Html.ValidationMessageFor(model => model.Expertise1, "", new { @class = "textboxerror" })

                        @Html.EditorFor(model => model.Expertise2, new { htmlAttributes = new { @class = "form-control", placeholder = "Expertise area 2", id = "TxtExpertise2", maxlength = "50" } })
                        @Html.ValidationMessageFor(model => model.Expertise2, "", new { @class = "textboxerror" })

                        @Html.EditorFor(model => model.Expertise3, new { htmlAttributes = new { @class = "form-control", placeholder = "Expertise area 3", id = "TxtExpertise3", maxlength = "50" } })
                        @Html.ValidationMessageFor(model => model.Expertise3, "", new { @class = "textboxerror" })

                        @Html.EditorFor(model => model.Expertise4, new { htmlAttributes = new { @class = "form-control", placeholder = "Expertise area 4", id = "TxtExpertise4", maxlength = "50" } })
                        @Html.ValidationMessageFor(model => model.Expertise4, "", new { @class = "textboxerror" })

                        @Html.EditorFor(model => model.Expertise5, new { htmlAttributes = new { @class = "form-control", placeholder = "Expertise area 5", id = "TxtExpertise5", maxlength = "50" } })
                        @Html.ValidationMessageFor(model => model.Expertise5, "", new { @class = "textboxerror" })
                    </div>
                </div>
                <div>
                    @Html.LabelFor(model => model.Interests, htmlAttributes: new { @class = "formlabelFontRight col-md-2" })
                    <div class="col-md-4">
                        @Html.EditorFor(model => model.Interests, new { htmlAttributes = new { @class = "form-control", id = "TxtInterests", maxlength = "50" } })
                        @Html.ValidationMessageFor(model => model.Interests, "", new { @class = "textboxerror" })
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-12 text-center">
            <input type="button" value="Save" class="btn btn-primary" onclick="UpdateProfileWorkplaceAndExpertiseInfo();" />
        </div>

    </div>
</div>
