@model GCETNChapter.Models.ViewModels.UserVO

@using (Html.BeginForm()) 
{
    @*@Html.AntiForgeryToken()*@
    
    <div class="form-horizontal">

        <div class="form-group">
            @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "formlabelFontRight col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control", id = "TxtUsername_Add", disabled = "disabled", maxlength = "50" } })
                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "textboxerror" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "formlabelFontRight col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", maxlength = "50", id="TxtPassword_Add" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "textboxerror" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ConfirmPassword, htmlAttributes: new { @class = "formlabelFontRight col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control", maxlength = "50", id = "TxtConfirmPassword_Add" } })
                @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "textboxerror" })
            </div>
        </div>

        <div id="divTxtCollegeRegNo_Add" class="form-group">
            @Html.LabelFor(model => model.CollegeRegistrationNo, htmlAttributes: new { @class = "formlabelFontRight col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CollegeRegistrationNo, new { htmlAttributes = new { @class = "form-control", maxlength = "12", id = "TxtCollegeRegNo_Add" } })
                @Html.ValidationMessageFor(model => model.CollegeRegistrationNo, "", new { @class = "textboxerror" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AccessRole, htmlAttributes: new { @class = "formlabelFontRight col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.AccessRole, new SelectList(ViewBag.AccessRoleList), new { @class = "form-control", id = "DDLAccessRole_Add" })
                @Html.ValidationMessageFor(model => model.AccessRole, "", new { @class = "textboxerror" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AccountStatus, htmlAttributes: new { @class = "formlabelFontRight col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.AccountStatus, new SelectList(ViewBag.AccountStatusList), new { @class = "form-control", id = "DDAccountStatus_Add" })
                @Html.ValidationMessageFor(model => model.AccountStatus, "", new { @class = "textboxerror" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CreatedBy, htmlAttributes: new { @class = "formlabelFontRight col-md-2" })
            <div id="LblCreatedBy_Add" class="col-md-10 normalFontLeft">
                @if (Model == null)
                {
                    <span>@Session["username"].ToString()</span>
                }
                else
                {
                    @Html.DisplayFor(model => model.CreatedBy)
                }
            </div>
            <input type="hidden" id="LblTransType" />
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input id="BtnCancel_Add" type="button" value="Cancel" class="btn btn-default" /> &nbsp;
                <input id="BtnAddNewuser" type="button" value="Create User" class="btn btn-primary" /> &nbsp;
                <input id="BtnResetPassword_Add" type="button" value="Reset Password" class="btn btn-info" />
            </div>
        </div>
    </div>
}
