@model GCETNChapter.Models.ViewModels.MemberRegistrationVO
<script src="~/JQueryScripts/Registration/RegistrationPage.js"></script>

@{
    ViewBag.Title = "Member Registration";
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <div id="divRegistrationBody" class="partialBodySection hideDiv">
        <br />
        <span class="headerText">Member Registration</span>
        <br /><br />

        <div>
            @Html.Partial("_SuccessErrorMessages")
        </div>

        <!-- Personal and Login Information -->
        <div class="panel panel-default">
            <div class="panel-heading formlabelFontLeft">Personal and Login Information</div>
            <div class="panel-body">

                <div class="row rowPadding">
                    <div>
                        <div class="col-md-2 formlabelFontRight">
                            @Html.LabelFor(model => model.FullName)
                        </div>
                        <div class="col-md-4">
                            @Html.EditorFor(model => model.FullName, new { htmlAttributes = new { @class = "form-control", maxlength = "50" } })
                            @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "textboxerror" })
                        </div>
                    </div>
                    <div>
                        <div class="col-md-2 formlabelFontRight">
                            @Html.LabelFor(model => model.Gender)
                        </div>
                        <div class="col-md-4">
                            @Html.DropDownListFor(model => model.Gender, new SelectList(ViewBag.GenderList), new { @class = "form-control" } )
                            @Html.ValidationMessageFor(model => model.Gender, "", new { @class = "textboxerror" })
                        </div>
                    </div>
                </div>

                <div class="row rowPadding">
                    <div>
                        <div class="col-md-2 formlabelFontRight">
                            @Html.LabelFor(model => model.DateOfBirth)
                        </div>
                        <div class="col-md-4">
                            @Html.EditorFor(model => model.DateOfBirth, new { htmlAttributes = new { @class = "form-control dateValue", style = "display: inline;", maxlength="10" } })
                            <span class="glyphicon glyphicon-info-sign editIcon" data-toggle="tooltip" title="Date of Birth should be in DD/MM/YYYY date format." style="font-size: 16px;"></span>
                            <br />
                            @Html.ValidationMessageFor(model => model.DateOfBirth, "", new { @class = "textboxerror" })
                        </div>
                    </div>
                    <div>
                        <div class="col-md-2 formlabelFontRight">
                            @Html.LabelFor(model => model.ProfileImage)
                        </div>
                        <div class="col-md-4">
                            @Html.EditorFor(model => model.ProfileImage, new { htmlAttributes = new { type="file" } })
                            @Html.ValidationMessageFor(model => model.ProfileImage, "", new { @class = "textboxerror" })
                        </div>
                    </div>
                </div>

                <br />

                <div class="row rowPadding">
                    <div>
                        <div class="col-md-2 formlabelFontRight">
                            @Html.LabelFor(model => model.Username)
                        </div>
                        <div class="col-md-4">
                            @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control", maxlength = "20", style = "display: inline;" } })
                            <span class="glyphicon glyphicon-info-sign editIcon" data-toggle="tooltip" title="Username should contain atleast 1 Character and 1 Number." style="font-size: 16px;"></span>
                            <br />
                            @Html.ValidationMessageFor(model => model.Username, "", new { @class = "textboxerror" })
                        </div>
                    </div>
                </div>

                <div class="row rowPadding">
                    <div>
                        <div class="col-md-2 formlabelFontRight">
                            @Html.LabelFor(model => model.Password)
                        </div>
                        <div class="col-md-4">
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", maxlength = "20", style = "display: inline;" } })
                            <span class="glyphicon glyphicon-info-sign editIcon" data-toggle="tooltip" title="Password should contain atleast 1 Uppercase, 1 Lowercase and i Number." style="font-size: 16px;"></span>
                            <br />
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "textboxerror" })
                        </div>
                    </div>
                    <div>
                        <div class="col-md-2 formlabelFontRight">
                            @Html.LabelFor(model => model.ConfirmPassword)
                        </div>
                        <div class="col-md-4">
                            @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control", maxlength = "20", style = "display: inline;" } })
                            <span class="glyphicon glyphicon-info-sign editIcon" data-toggle="tooltip" title="Confirm Password should be smae as the password.." style="font-size: 16px;"></span>
                            <br />
                            @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "textboxerror" })
                        </div>
                    </div>
                </div>

            </div>
        </div>

        <!-- College Information -->
        <div class="panel panel-default">
            <div class="panel-heading formlabelFontLeft">College Information</div>
            <div class="panel-body">

                <div class="row rowPadding">
                    <div>
                        <div class="col-md-2 formlabelFontRight">
                            @Html.LabelFor(model => model.CollegeRegistrationNo)
                        </div>
                        <div class="col-md-4">
                            @Html.EditorFor(model => model.CollegeRegistrationNo, new { htmlAttributes = new { @class = "form-control", maxlength = "9" } })
                            @Html.ValidationMessageFor(model => model.CollegeRegistrationNo, "", new { @class = "textboxerror" })
                        </div>
                    </div>
                    <div>
                        <div class="col-md-2 formlabelFontRight">
                            @Html.LabelFor(model => model.Batch)
                        </div>
                        <div class="col-md-4">
                            @Html.DropDownListFor(model => model.Batch, new SelectList(ViewBag.BatchList), new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Batch, "", new { @class = "textboxerror" })
                        </div>
                    </div>
                </div>

                <div class="row rowPadding">
                    <div>
                        <div class="col-md-2 formlabelFontRight">
                            @Html.LabelFor(model => model.Branch)
                        </div>
                        <div class="col-md-4">
                            @Html.DropDownListFor(model => model.Branch, new SelectList(ViewBag.BranchList), new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Branch, "", new { @class = "textboxerror" })
                        </div>
                    </div>
                    <div>
                        <div class="col-md-2 formlabelFontRight">
                            @Html.LabelFor(model => model.EngineeringDescipline)
                        </div>
                        <div class="col-md-4">
                            @Html.EditorFor(model => model.EngineeringDescipline, new { htmlAttributes = new { @class = "form-control", maxlength = "50" } })
                            @Html.ValidationMessageFor(model => model.EngineeringDescipline, "", new { @class = "textboxerror" })
                        </div>
                    </div>
                </div>

            </div>
        </div>

        <!-- Contact Information -->
        <div class="panel panel-default">
            <div class="panel-heading formlabelFontLeft">Contact Information</div>
            <div class="panel-body">

                <div class="row rowPadding">
                    <div>
                        <div class="col-md-2 formlabelFontRight">
                            @Html.LabelFor(model => model.PrimaryContactNo)
                        </div>
                        <div class="col-md-4">
                            @Html.EditorFor(model => model.PrimaryContactNo, new { htmlAttributes = new { @class = "form-control", maxlength = "15" } })
                            @Html.ValidationMessageFor(model => model.PrimaryContactNo, "", new { @class = "textboxerror" })
                        </div>
                    </div>
                    <div>
                        <div class="col-md-2 formlabelFontRight">
                            @Html.LabelFor(model => model.ContactNoIndia)
                        </div>
                        <div class="col-md-4">
                            @Html.EditorFor(model => model.ContactNoIndia, new { htmlAttributes = new { @class = "form-control", maxlength = "15" } })
                            @Html.ValidationMessageFor(model => model.ContactNoIndia, "", new { @class = "textboxerror" })
                        </div>
                    </div>
                </div>

                <div class="row rowPadding">
                    <div>
                        <div class="col-md-2 formlabelFontRight">
                            @Html.LabelFor(model => model.WhatsappNumber)
                        </div>
                        <div class="col-md-4">
                            @Html.EditorFor(model => model.WhatsappNumber, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.WhatsappNumber, "", new { @class = "textboxerror" })
                        </div>
                    </div>
                    <div>
                        <div class="col-md-2 formlabelFontRight">
                            @Html.LabelFor(model => model.Email)
                        </div>
                        <div class="col-md-4">
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", maxlength = "50" } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "textboxerror" })
                        </div>
                    </div>
                </div>

            </div>
        </div>
        
        <!-- Address Information -->
        <div class="panel panel-default">
            <div class="panel-heading formlabelFontLeft">Address Information</div>
            <div class="panel-body">

                <div class="row rowPadding">
                    <div>
                        <div class="col-md-2 formlabelFontRight">
                            @Html.LabelFor(model => model.CurrentAddress)
                        </div>
                        <div class="col-md-6">
                            @Html.EditorFor(model => model.CurrentAddress, new { htmlAttributes = new { @class = "longtextbox", maxlength = "100" } })
                            @Html.ValidationMessageFor(model => model.CurrentAddress, "", new { @class = "textboxerror" })
                        </div>
                    </div>
                    <div>
                        <div class="col-md-4">
                            @Html.DropDownListFor(model => model.CurrentCountry, new SelectList(ViewBag.CountryList), new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.CurrentCountry, "", new { @class = "textboxerror" })
                        </div>
                    </div>
                </div>

                <div class="row rowPadding">
                    <div>
                        <div class="col-md-2 formlabelFontRight">
                            @Html.LabelFor(model => model.PermanentAddress)
                        </div>
                        <div class="col-md-6">
                            @Html.EditorFor(model => model.PermanentAddress, new { htmlAttributes = new { @class = "longtextbox", maxlength = "100" } })
                            @Html.ValidationMessageFor(model => model.PermanentAddress, "", new { @class = "textboxerror" })
                        </div>
                    </div>
                    <div>
                        <div class="col-md-4">
                            @Html.DropDownListFor(model => model.PermanentCountry, new SelectList(ViewBag.CountryList), new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.PermanentCountry, "", new { @class = "textboxerror" })
                        </div>
                    </div>
                </div>

            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-12 text-right">
                <a href="~/MemberRegistration/Login/" class="btn btn-lg btn-default">Back to Login</a> &nbsp; &nbsp;
                <input type="submit" value="Complete Registration" class="btn btn-lg btn-primary" />
            </div>
        </div>
    </div>
}
