@model List<GCETNChapter.Models.ViewModels.Events.EventPaymentCollectionVO>

<span id="LblHeaderText_EPC" class="headerText">Manage Event Payment Collection</span>
<br /><br />

<div>
    <a href="#" id="LnkAddNewEventPayment_EPC"><span class="glyphicon glyphicon-plus"></span> New Event Payment</a>
</div>
<br />

<div class="row">
    <table id="TblViewEventPatments_EPC" class="table table-responsive">
        <thead>
            <tr>
                <th></th>
                <th>Event ID</th>
                <th>Payment ID</th>
                <th>College Reg No</th>
                <th>Payment Date</th>
                <th>Amount Received (Rs.)</th>
                <th>Created By</th>
                <th>Created Date</th>
                <th>Modified By</th>
                <th>Modified Date</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <a href="#" onclick="GetAddEventPartialView(@item.PaymentCollectionID)"><span class="glyphicon glyphicon-pencil"></span></a>
                            <a href="#" onclick="DeleteEvent(@item.PaymentCollectionID)"><span class="glyphicon glyphicon-trash"></span></a>
                        </td>
                        <td>@item.EventID</td>
                        <td>@item.PaymentCollectionID</td>
                        <td>@item.CollegeRegistrationNo</td>
                        <td>@item.PaymentDate.ToShortDateString()</td>
                        <td>@item.AmountReceived</td>
                        <td>@item.CreatedBy</td>
                        <td>@item.CreatedDate</td>
                        <td>@item.ModifiedBy</td>
                        <td>@item.ModifiedDate</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>




