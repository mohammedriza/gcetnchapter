@model List<GCETNChapter.Models.ViewModels.Events.EventsVO>

<span id="LblHeaderText_VE" class="headerText">Manage Events</span>
<br /><br />

<div>
    <a href="#" id="LnkAddNewEvent_VE"><span class="glyphicon glyphicon-plus"></span> New Event</a>
</div>
<br />

<div class="row">
    <table id="TblViewEvents" class="table table-responsive">
        <thead>
            <tr>
                <th></th>
                <th>Event ID</th>
                <th>Event Name</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Total Collected (Rs.)</th>
                <th>Total Expenses (Rs.)</th>
                <th>Created By</th>
                <th>Created Date</th>
                <th>Modified By</th>
                <th>Modified Date</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                <tr>
                    <td>
                        <a href="#" class="editIcon" title="Edit Event" onclick="GetEventDetailsByEventID(@item.EventID)">
                            <span class="glyphicon glyphicon-pencil"></span>
                        </a>
                        <a href="#" class="editIcon" title="Delete Event" onclick="DeleteEvent(@item.EventID)">
                            <span class="glyphicon glyphicon-trash"></span>
                        </a>
                        <a href="#" class="editIcon" title="Event Settings" onclick="EventSettings(@item.EventID)">
                            <span class="glyphicon glyphicon-cog"></span>
                        </a>
                    </td>
                    <td>@item.EventID</td>
                    <td>@item.EventName</td>
                    <td>@item.StartDate.Value.ToShortDateString()</td>
                    <td>@item.EndDate.Value.ToShortDateString()</td>
                    <td>@item.TotalCollectedAmount</td>
                    <td>@item.TotalExpenseAmount</td>
                    <td>@item.CreatedBy</td>
                    <td>@item.CreatedDate</td>
                    <td>@item.ModifiedBy</td>
                    <td>@item.ModifiedDate</td>
                </tr>
                }
            }
        </tbody>
    </table>
</div>


<!-- MODAL POPUP FOR EVENT SETTINGS (PAYMENT COLLECTION, EXPENSE & GALLERY) -->
<div id="EventSettingsModal" class="modal fade" role="dialog" tabindex="-1">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <span class="modal-title text-info" style="font-weight: bold;"> Select an Event Action </span>
            </div>
            <div class="modal-body">
                <span class="control-label"> Please select an action from the list below, to perform for the selected Event <br /> (Event ID: <span id="LblEventIDSettings"></span>)</span>
                <br /><br />
                <div class="text-center">
                    <a href="#" id="LnkAddEventPaymentCollectionSettings" class="btn btn-default">Add Event Payment Collection</a> <br /><br />
                    <a href="#" id="LnkAddEventExpenseDetailsSettings" class="btn btn-default">Add Event Expense Details</a> <br /><br />
                    <a href="#" id="LnkAddEventGallerySettings" class="btn btn-default">Add Photos to Event Gallery</a>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
            </div>
        </div>

    </div>
</div>


